<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="horizontal"  android:descendantFocusability="blocksDescendants">

    <CheckBox
        android:id="@+id/task_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/priority"
        android:layout_width="16dip"
        android:layout_height="16dip"
        android:src="@drawable/priority_high" android:layout_gravity="center_vertical"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium" android:layout_weight="1" android:paddingLeft="5dip"/>

</LinearLayout>